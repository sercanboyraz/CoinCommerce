@model RealOnePageCheckoutSettingsModel


<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-override-store-checkbox asp-for="PersistedShippingAddressFields_OverrideForStore" asp-input="PersistedShippingAddressFields" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
            <nop-label asp-for="PersistedShippingAddressFields" />
        </div>
        <div class="col-md-9">
            <select id="@Html.IdFor(model => model.PersistedShippingAddressFields)" name="@Html.IdFor(model => model.PersistedShippingAddressFields)" multiple="multiple" data-placeholder="@T("SevenSpikes.RealOnePageCheckout.Admin.Settings.PersistedShippingAddressFields.SelectFields")">
                        
                @foreach (string addressField in Model.AvailableAddressFields)
                {
                    bool isSelected = Model.PersistedShippingAddressFields.Contains(addressField);

                    <!option @Html.Raw(isSelected ? "selected='selected'" : string.Empty)>@addressField</!option>
                }
            </select>
            <span asp-validation-for="PersistedShippingAddressFields"></span>
        </div>
    </div>
</div>